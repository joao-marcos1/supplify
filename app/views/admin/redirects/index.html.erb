<% @page_heading = _('Redirects') + content_tag(:div, link_to(_("New Link"), {:controller => 'redirects', :action => 'new'}, :id => 'dialog-link', :class => 'btn info'), :class => 'pull-right') %>

<table class="zebra-striped clearfix">
  <thead>
    <tr class='noborder'>
    <th><%= _("From") %></th>
    <th><%= _("To") %></th>
  </tr>
  </thead>
  <%= render_void_table(@redirects.size, 2)  %>
  <% for redirect in @redirects %>
  <tr <%= alternate_class %>>
    <td>
      <%= "#{this_blog.base_url}/#{redirect.from_path}" %>
      <%= show_redirect_actions redirect %>
    </td>
    <td><%= redirect.to_path %></td>
  </tr>
  <% end %>
  <%= display_pagination(@redirects, 2)%>
</table>