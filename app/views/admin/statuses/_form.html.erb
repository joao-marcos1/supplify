<input type="hidden" name="user_textfilter" id="user_textfilter" value="<%= current_user.text_filter_name %>" />

<h2 class='page-header'>
  <%= _("#{controller.action_name.to_s.capitalize} Status") %>
  <span class='pull-right'>
    <%= save( _("Publish")) %>
  </span>
</h2>

<div>
  <div class='span9'>
    <div id='editor'>
      <div id='quicktags'>
        <script type="text/javascript">edToolbar('status_body');</script>
      </div>
      <div id='simple_editor'>
        <%= text_area('status', 'body', {:class => 'input-block-level', :height => '30px', :rows => '2'}) %>
      </div>
    </div>  
    <div class='separator'>
      <div class='well'>
        <fieldset>
          <legend><%= _("Publish settings") %></legend>
          <div class='control-group'>
            <%= _("Status") %>: <strong><%= _(@status.state.to_s.downcase) %></strong> <%= toggle_element 'status' %>
            <div id='status' style='display: none;'>
              <%= check_box 'status', 'published'  %>
              <%= _("Published") %>
              
            </div>
          </div>
          <div class='clearfix'>
            <%= _("Published") %> <strong><%= publish_now_or_already_published @status %></strong> <%= toggle_element 'publish' %>
            <div id='publish' class='input-append' style='display: none;'>
              <%= calendar_date_select 'status', 'published_at', {:class => 'span7'} %>
            </div>
          </div>
          
          <div class='control-group'>
            <%= _("Text filter") %>: <strong><%= _("#{@status.text_filter.description}") %></strong> <%= toggle_element 'text_filter' %>
            <div id='text_filter' style='display: none;'>
              <select name="status[text_filter]" id="text_filter">
              <%= options_for_select text_filter_options, @status.text_filter %>
            </select>
            </div>
          </div>
        </fieldset>
      </div>
      <div class='form-actions'>
        <div class='pull-right'>
            <%= save( _("Publish")) %>
        </div>
      </div>
    </div>
    
  </div>
  <div class='span3'>
    <div class='well'>
      <h4><%= _("Permanent link")%></h4>
      <div>
        <%= text_field 'status', 'permalink', :class => 'input-block-level' %>
      </div>
      <div>
        <label for="status_push_to_twitter" class='checkbox'>
          <%= check_box 'status', 'push_to_twitter'  %>
          <%= _("Push to Twitter")%>
        </label>
        
      </div>
    </div>
  
  </div>
</div>