<%- content_for :page_heading do %>
  <i class="icon-large icon-articles-types"></i>
  <h2 class="page-title"><%= t(".post_types") %></h2>
<% end %>

<div>
  <div class='span4'>
    <%= error_messages_for 'post_type' %>
    <%= form_tag :action=>"edit", :id => @post_type.id do %>
      <label for="post_type_name"><%= t(".name")%></label>
      <%= text_field :post_type, :name, :class => 'span12'  %>
      <label for="post_type_description"><%= t(".description") %></label>
      <%= text_area :post_type, :description, :rows => 5, :class => 'span12' %>
      <div class='form-actions'>
        <%= cancel_or_save %>
      </div>
    <% end %>
  </div>

  <div class="span8">
    <table class='table table-striped'>
      <thead>
        <tr class='noborder'>
          <th><%= t(".name") %></th>
          <th><%= t(".description") %></th>
          <th><%= t(".template_name") %></th>
        </tr>
      </thead>
      <tr class='shade'>
        <td><%= t(".default") %></td>
        <td><%= t(".publify_default_post_type") %></td>
        <td>read</td>
      </tr>
      <% for pt in @post_types -%>
        <tr>
          <td>
            <%= link_to_edit pt.name, pt %><br />
            <%= show_post_types_actions pt %>
          </td>
          <td><%= h pt.description %></td>
          <td><%= pt.permalink %></td>
        </tr>
      <% end -%>
    </table>
    <p class="help-block"><%= t(".explain") %></p>
  </div>
</div>
